/*
*	jqTinyScrollBar.styl
*/
.tinyscrollbar
	position relative
	.viewport
		overflow hidden
		position relative
		z-index 1
	.overview
		left 0
		list-style none
		margin 0
		padding 0
		position absolute
		top 0
		width 100%
	.scrollbar
		height 100%
		overflow hidden
		position absolute
		right 1px
		top 0
		width 5px
		z-index 2
	.track
		height 100%
		position relative
		width 5px
	.thumb
		background #999
		border-radius 4px
		cursor pointer
		height 20px
		left 0
		overflow hidden
		position absolute
		top 0
		width 5px
	.disable
		display none
.noSelect
	user-select none