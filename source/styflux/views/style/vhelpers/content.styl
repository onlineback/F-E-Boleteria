/**
* Content CSS
* @class content
* @module content.css
*/
.row
	*zoom 1
	&:before,&:after
		display table
		content ""
		line-height 0
	&:after
		clear both
.box-center
	margin 0 auto
	*zoom 1
	&:before,&:after
		display table
		content ""
		line-height 0
	&:after
		clear both
.container
	background #fff
	height auto
	margin 64px auto 0
	//max-width 1200px
	min-height 600px
	padding 0 0 20px
	width 1000px
	*zoom 1
	&:before,&:after
		display table
		content ""
		line-height 0
	&:after
		clear both
.box-border
	border 1px solid #f1f1f1
	border-radius 4px
	padding 10px
.box-white
	padding 30px 50px 0
	*zoom 1
	&:before,&:after
		display table
		content ""
		line-height 0
	&:after
		clear both
/*
*	Grids
